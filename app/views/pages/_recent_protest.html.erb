<div class="large-6 large-uncentered medium-6 medium-uncentered small-11 small-centered columns">
   <div class="recent_protest">

      <div class="row top_row">
         <div class="small-12 columns">
            <h4 class="recent_protest_header"><%= link_to truncate(recent_protest.title, length: 25), recent_protest %></h4>
         </div>
      </div><!-- row -->

      <div class="row">
         <div class="small-3 columns">
            <div class="state-label text-center <%= recent_protest.state.downcase %>"><%= link_to recent_protest.state.upcase, protests_path(state: recent_protest.state) %></div>
         </div>
         <div class="small-3 small-offset-6 columns">
            <div class="addthis_toolbox addthis_default_style" addthis:title="<%= recent_protest.title %>" addthis:description="via @protestaus" addthis:url="http://www.protestaustralia.com/protests/<%= recent_protest.id %>">
               <a class="addthis_button_compact"><img src="assets/share.png" width="25px" height="25px" class="right" alt="Share button"> </a>
            </div>
         </div>
      </div><!-- row -->

      <div class="row">
         <div class="small-12 columns">
            <div class="recent_protest_info"><%= truncate(recent_protest.description, length: 100) %></div>
         </div>
      </div><!-- row -->

      <div class="row">
         <div class="small-7 small-offset-5 columns">
            <div class="recent_protest_info"><%= link_to "More info...", recent_protest %></div>
         </div>
      </div><!-- row -->
   </div> <!-- recent_protest -->
   <div class="bottom">
      <div class="row">
         <div class="small-3 columns">
            <h4 class="recent_protest_header"><%= Time.parse(recent_protest.time.to_s).strftime("%l:%M%P") %></h4>
         </div>
         <div class="small-8 small-offset-1 columns">
            <h4 class="recent_protest_header"><%= Date.parse(recent_protest.date.to_s).strftime("%a %-d-%-m-%Y") %></h4>
         </div>
      </div>
   </div>
</div>

<div class="large-6 large-uncentered medium-6 medium-uncentered small-11 small-centered columns">
   <div class="recent_protest">

      <div class="row">
         <div class="small-12 columns">
            <h4 class="recent_protest_header"><%= link_to truncate(recent_protest.title, length: 18), recent_protest %></h4>
         </div>
      </div><!-- row -->

      <div class="row">
         <div class="small-3 columns">
            <div class="state-label text-center <%= recent_protest.state.downcase %>"><%= link_to recent_protest.state.upcase, protests_path(state: recent_protest.state) %></div>
         </div>
         <div class="small-9 columns">
            <span class="date-label"><%= Date.parse(recent_protest.date.to_s).strftime("%a %-d-%-m-%Y") %></span>
         </div>
      </div><!-- row -->

      <div class="row">
         <div class="small-12 columns">
            <div class="recent_protest_info"><span class="strong">Starts:</span> <%= Time.parse(recent_protest.time.to_s).strftime("%l:%M%P") %></div>
         </div>
      </div><!-- row -->

      <div class="row">
         <div class="small-12 columns">
            <div class="recent_protest_info"><span class="strong">Starts at:</span> <%= truncate(recent_protest.starting_location, length: 50) %></div>
         </div>
      </div><!-- row -->

      <div class="row">
         <div class="small-6 small-offset-6 columns">
            <div class="recent_protest_info"><%= link_to "More info...", recent_protest %></div>
         </div>
      </div><!-- row -->

   </div> <!-- recent_protest -->
</div>

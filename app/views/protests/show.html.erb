<%= provide(:title, "Join the protest in #{@protest.state} - #{@protest.title}, #{Date.parse(@protest.date.to_s).strftime("%e %B %Y")}  | Protest Australia") %>
<div class="main">
<h1><span class="state-header <%= @protest.state.downcase %>"><%= link_to @protest.state.upcase, protests_path(state: @protest.state) %></span> <%= @protest.title %></h1>
	<div class="row">
		<% if current_user.try(:admin?) %>
			<div class="small-12 columns">
				<div class="box admin-box">
					<h3 class="subheading">Admin:</h3>
					<p>User ID: <%= @user.id %></p>
					<p>Username: <%= @user.email %></p>
				</div>
			</div>
		<% end %>
	</div><!-- row -->

	<%= render 'common/share' %>


		<div class="row" data-equalizer>

			<div class="medium-6 small-12 columns">
				<div class="panel callout_green" data-equalizer-watch>
					<div class="row">
						<div class="small-3 columns"><%= Time.parse(@protest.time.to_s).strftime("%H:%M%P") %></div>
						<div class="small-9 columns"><%= Date.parse(@protest.date.to_s).strftime("%A %e %B %Y") %></div>
					</div>
				</div>
			</div>

			<div class="medium-6 small-12 columns">
				<div class="panel callout_green" data-equalizer-watch>
					<%= @protest.description %>
				</div>
			</div>

		</div><!-- row -->

		<div class="row" data-equalizer>

			<div class="medium-6 small-12 columns">
				<div class="panel callout" data-equalizer-watch>
					<h3 class="info-header">Starting location</h3> <%= @protest.starting_location %>
				</div>
			</div>

			<div class="medium-6 small-12 columns">
				<div class="panel callout" data-equalizer-watch>
					<h3 class="info-header">March route</h3> <%= @protest.march_route %>
				</div>
			</div>

		</div><!-- row -->

		<div class="row" data-equalizer>

			<div class="medium-6 small-12 columns">
				<div class="panel" data-equalizer-watch>
					<h3 class="info-header">More info</h3> <% unless @protest.more_info.empty? %>
						<%= @protest.more_info %><br>
						<% else %>
						N/A<br>
						<% end %>
					</p>
				</div>
			</div>

			<div class="medium-6 small-12 columns margin-bottom-50px">
				<div class="panel" data-equalizer-watch>
					<% unless @protest.organisation.empty? %>
					<div class="row">
						<div class="small-12 columns">
							<%= @protest.organisation %>
						</div>
					</div><!-- row -->
					<% end %>
					<div class="row">
						<div class="small-3 columns text-center">
							<% unless @protest.twitter == "@" %>
								<%= link_to raw('<i class="fi-social-twitter"></i>'), "http://www.twitter.com/#{@protest.twitter[1..-1]}", target: "_blank" %></i>
							<% else %>
								<i class="fi-social-twitter disabled-icon"></i>
							<% end %>
						</div>
						<div class="small-3 columns text-center"><i class="fi-social-facebook"></i></div>
						<div class="small-3 columns text-center"><i class="fi-link"></i></div>
						<div class="small-3 columns text-center"><i class="fi-mail"></i></div>
					</div><!-- row -->
				</div>
			</div>
		</div>



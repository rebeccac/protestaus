<% provide(:title, 'All Protests | Protest Australia') %>

<h1><%= @heading %></h1>

<% if @protests.any? %>
	<ul id="protest_list">
		<%= render @protests %> <!-- render _protest.html.erb -->
	</ul>
	<%= will_paginate %> <!-- calls will_paginate gem & automatically paginates protest results -->

<% else %>
	<p>There are no protests to display</p>
<% end %>
